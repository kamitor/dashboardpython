root = true

[*]
charset             = utf-8
end_of_line         = lf
indent_style        = space
indent_size         = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml,json,toml}]
indent_size = 2

[*.{ps1}]
end_of_line = crlf

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
